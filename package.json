{
  "name": "lit-typewriter",
  "version": "0.0.1",
  "description": "A Typewriter web component based on LitElement.",
  "main": "lit-typewriter.js",
  "module": "lit-typewriter.js",
  "type": "module",
  "scripts": {
    "start": "npm run clean && npm run build && npm run serve & npm run build:watch",
    "serve": "es-dev-server --watch --node-resolve --open",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf lit-typewriter.{d.ts,d.ts.map,js,js.map} demo.{d.ts,d.ts.map,js,js.map}",
    "checksize": "rollup -c ; cat lit-typewriter.bundled.js | gzip -9 | wc -c ; rm lit-typewriter.bundled.js"
  },
  "keywords": [
    "web-components",
    "lit-element"
  ],
  "author": "Dénes Máté Bencze",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d-nash/typewriter.git"
  },
  "dependencies": {
    "lit-element": "^2.3.1"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^2.3.2",
    "es-dev-server": "^1.47.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^1.32.1",
    "rollup-plugin-filesize": "^7.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "typescript": "^3.8.3"
  }
}
